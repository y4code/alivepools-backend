[Unit]
Description=AlivePools Backend Service
After=network.target

[Service]
User=root
WorkingDirectory=/root/alivepools-backend
Environment="PATH=/root/alivepools-backend/venv/bin"
ExecStart=/root/alivepools-backend/venv/bin/flask --app alivepools-backend run --host=0.0.0.0
Restart=on-failure

[Install]
WantedBy=multi-user.target
